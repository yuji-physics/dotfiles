##########################
# Settings above "TEXT"  #
##########################

background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
#xftfont DejaVu Sans Mono:size=12
#gap_x 5
#gap_y 60
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no


# alignment of conky windows
alignment top_right
gap_x 10
gap_y 20
# don't quit when the terminal is closed
background yes

# stop flickering on display
double_buffer yes

# window size
maximum_width 400
minimum_size 400 1200

# background transparent
own_window_transparent yes
own_window_argb_visual true

# font setting
override_utf8_locale yes
# anti alias
use_xft yes
xftfont TakaoGothic:style=Regular:size=11

########################################
# display conky window below
########################################
# ${hr}: solid line
# ${stippled_hr}: dotted line
# ${color #XXXXXX}hogehoge: write "hogehoge" on #XXXXXX color
# ${scroll 3 1 hogehoge}: 
# ${alignc}: center
# ${alignr}: right
# ${alignl}: left
TEXT

