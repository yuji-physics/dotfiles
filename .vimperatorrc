"3.8.2 (created: 2014/02/13 23:52:43)

source! /Users/Yuji/.vimperatorrc.local

" vim: set ft=vimperator:

"====================
" setting
"====================
colorscheme black
set hintchars=0123456789qwertyuopasdfghjklzxcvbnm
set ignorecase
set complete=lb
set editor='bash -lc "mvim -f \$*" mvim '

"--------------------
" key mapping
"--------------------
noremap h 5h
noremap <S-h> 15h
noremap <C-h> :back<CR>
noremap j 5j
noremap <S-j> 15j
noremap k 5k
noremap <S-k> 15k
noremap l 5l
noremap <S-l> 15l
noremap <C-l> :forward<CR>
noremap <C-j> :jumps<CR>;o
noremap d :q<CR>

" google shortcut
noremap gs :open https://www.google.co.jp/<CR>
noremap gm :open https://mail.google.com/mail/<CR>
noremap gc :open https://www.google.com/calendar/render<CR>
noremap <S-g><S-s> :tabopen https://www.google.co.jp/<CR>
noremap <S-g><S-m> :tabopen https://mail.google.com/mail/<CR>
noremap <S-g><S-c> :tabopen https://www.google.com/calendar/render<CR>

inoremap <C-b> <BS>
inoremap <C-d> <DEL>
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>
