#.zshrc_Darwin
#
# enable online help
unalias run-help
autoload run-help
HELPDIR=/usr/loca/share/zsh/help

fpath=(/usr/local/share/zsh-completions $fpath)
path=(
$HOME/bin(N-/)
/usr/local/bin(N-/)
/usr/local/sbin(N-/)
$path
)

#-------------------------------
# Environment
#-------------------------------
PATH=/Applications/gnuplot.app:/Applications/gnuplot.app/bin:$PATH
PATH=/Library/Internet\ Plug-Ins/JavaAppletPlugin.plugin/Contents/Home/bin:$PATH
export EDITOR=vim
export PKG_CONFIG_PATH="/opt/X11/lib/pkgconfig:/usr/local/lib/pkgconfig"
export RANGER_LOAD_DEFAULT_RC=FALSE
#export TK_LIBRARY=/usr/local/Cellar/tcl-tk/8.6.3/lib/tk8.6
#export TCL_LIBRARY=/usr/local/Cellar/tcl-tk/8.6.3/lib/tcl8.6
export HOMEBREW_CASK_OPTS="--appdir=/Applications --caskroom=/usr/local/Caskroom"
export PYTHONDONTWRITEBYTECODE=1
# GO
export GOROOT=/usr/local/opt/go/libexec
export GOPATH=$HOME/.go
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

export CPATH=$CPATH:$HOME/myscript/c++/include:$HOME/myscript/c/include
export C_INCLUDE_PATH=$C_INCLUDE_PATH:$HOME/myscript/c/include
export CPLUS_INCLUDE_PATH=$CPLUS_INCLUDE_PATH:$HOME/myscript/c++/include
export LIBRARY_PATH=$LIBRARY_PATH:$HOME/myscript/c++/lib:$HOME/myscript/c/lib
export DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:$HOME/myscript/c++/lib:$HOME/myscript/c/lib

# Tex
export TEXINPUTS=$TEXINPUTS:/usr/local/tex/sty
export BSTINPUTS=$BSTINPUTS:/usr/local/tex/bst
export BIBINPUTS=$BIBINPUTS:/usr/local/tex/bib

eval `/usr/libexec/path_helper -s`
#-------------------------------
# alias
#-------------------------------
alias mv="mv -i"
alias vim="/usr/local/bin/vim"
alias git="/usr/local/bin/git"
if [ -n "$(type gsed)" ];then
  alias sed="/usr/local/bin/gsed"
fi

alias python32="PYTHONPATH=\"/usr/local/lib/python2.7/site-packages\" VERSIONER_PYTHON_PREFER_32_BIT=yes /usr/bin/python" # Homebrew python is 64 bit only? 
if [ -n "$(type gls)" ];then
  alias l="gls --color"
  alias ls="gls --color"
  alias la="gls -a --color"
  alias ll="gls -lh --color"
fi
alias lc='echo -n "file count:" && ls -U1 | wc -l' # count files
alias rm="rm -i"

if [ -z $TMUX ]; then
  tmux -2
fi

function mdless(){
  grip --export $1 /dev/stdout | w3m -T text/html
}

function mdlessgfm(){
  grip --gfm --export $1 /dev/stdout | w3m -T text/html
}

function google(){
  arg=$(echo $@ | sed -e "s/  */\+/g")
  w3m "http://www.google.co.jp/search?q=${arg}&hl=ja&biw=&bih=&gbv=1"
}

if which peco &> /dev/null; then
  function peco-select-history(){
    local tac
    if which tac > /dev/null;then
      tac="tac"
    elif which gtac > /dev/null;then
      tac="gtac"
    else
      tac="tail -r"
    fi
    BUFFER=$(\history -n 1|\
      eval $tac | \
      peco --query "$LBUFFER")
    CURSOR=$#BUFFER
    zle clear-screen
  }
  zle -N peco-select-history
  bindkey '^R' peco-select-history

  function agvim(){
    vim $(ag $@ | peco --query "$LBUFFER" | awk -F : '{print "-c " $2 " " $1}')
}
fi
