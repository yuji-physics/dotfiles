#.zshrc_Linux
#
path=(
$HOME/bin(N-/)
/usr/local/bin(N-/)
/usr/local/sbin(N-/)
$path
)
#-------------------------------
# PATH
#-------------------------------
PATH=~/myscript:$PATH
export PATH
#-------------------------------
# alias
#-------------------------------
alias l="ls --color"
alias ls="ls --color"
alias la="ls -a --color"
alias ll="ls -l --color"
alias rm="rm -i"
alias mv="mv -i"

if [ -e ${HOME}/.Xmodmap ]; then
  xmodmap ${HOME}/.Xmodmap
fi

if which peco &> /dev/null; then
  function peco-select-history(){
    local tac
    if which tac > /dev/null;then
      tac="tac"
    elif which gtac > /dev/null;then
      tac="gtac"
    else
      tac="tail -r"
    fi
    BUFFER=$(\history -n 1|\
      eval $tac | \
      peco --query "$LBUFFER")
    CURSOR=$#BUFFER
    zle clear-screen
  }
  zle -N peco-select-history
  bindkey '^R' peco-select-history
fi
