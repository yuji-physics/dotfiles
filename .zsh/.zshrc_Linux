#.zshrc_Linux
#
path=(
$HOME/bin(N-/)
/usr/local/bin(N-/)
/usr/local/sbin(N-/)
$path
)
#-------------------------------
# PATH
#-------------------------------
PATH=~/myscript:$PATH
export PATH
#-------------------------------
# alias
#-------------------------------
alias ls="ls --color"
alias la="ls -a --color"
alias ll="ls -l --color"

if [ -e ${HOME}/.Xmodmap ]; then
  xmodmap ${HOME}/.Xmodmap
fi
