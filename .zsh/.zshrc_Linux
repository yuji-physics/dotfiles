#.zshrc_Linux
#
path=(
$HOME/bin(N-/)
/usr/local/bin(N-/)
/usr/local/sbin(N-/)
$path
)
#-------------------------------
# PATH
#-------------------------------
PATH=~/myscript:$PATH
export PATH
#-------------------------------
# alias
#-------------------------------
alias l="ls --color"
alias ls="ls --color"
alias la="ls -a --color"
alias ll="ls -l --color"
alias rm="rm -i"
alias mv="mv -i"

if [ -e ${HOME}/.Xmodmap ]; then
  xmodmap ${HOME}/.Xmodmap
fi
